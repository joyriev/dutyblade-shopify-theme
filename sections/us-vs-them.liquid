<section class="bg-[#f5f2ed] py-24 relative overflow-hidden">
  <div class="absolute top-0 right-0 w-96 h-96 bg-gray-200/20 rounded-full -mr-48 -mt-48 blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-accent/5 rounded-full -ml-48 -mb-48 blur-3xl"></div>

  <div class="max-w-4xl mx-auto px-4 relative z-10">

    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-extrabold uppercase italic tracking-tighter text-primary mb-4">
        {{ section.settings.heading }}
      </h2>
      <p class="text-gray-600 font-medium">
        {{ section.settings.subheading }}
      </p>
    </div>

    <div class="grid grid-cols-2 rounded-2xl overflow-hidden shadow-[0_35px_60px_-15px_rgba(0,0,0,0.2)]">

      <!-- US -->
      <div class="bg-primary text-white p-8 md:p-12">
        <div class="text-center border-b border-white/10 pb-8 mb-8">
          <h4 class="font-serif font-black text-2xl uppercase text-accent">DutyBlade</h4>
          <p class="text-xs uppercase tracking-[0.3em] text-gray-400 mt-2">$21 Veteran-Owned</p>
        </div>

        <ul class="space-y-6">
          {% for block in section.blocks %}
            {% if block.type == 'us_item' %}
              <li class="flex items-center gap-4 font-bold">
                <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                {{ block.settings.text }}
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

      <!-- THEM -->
      <div class="bg-white text-primary p-8 md:p-12">
        <div class="text-center border-b border-gray-100 pb-8 mb-8">
          <h4 class="font-serif font-black text-2xl uppercase text-gray-400">Corporate</h4>
          <p class="text-xs uppercase tracking-[0.3em] text-gray-400 mt-2">$35+ Mass-Market</p>
        </div>

        <ul class="space-y-6">
          {% for block in section.blocks %}
            {% if block.type == 'them_item' %}
              <li class="flex items-center gap-4 text-gray-500 font-medium">
                <span class="w-2 h-2 bg-red-500 rounded-full"></span>
                {{ block.settings.text }}
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

    </div>

    {% if section.settings.cta_link != blank %}
      <div class="mt-12 text-center">
        <a href="{{ section.settings.cta_link }}" class="inline-flex items-center gap-2 font-black uppercase tracking-widest text-primary hover:text-accent transition-colors">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {% endif %}

  </div>
</section>

