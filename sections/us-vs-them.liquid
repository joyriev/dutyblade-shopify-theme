<div class="bg-[#f5f2ed] py-24 relative overflow-hidden">

  <div class="page-width">

    <div class="text-center mb-8">
      <h2 class="text-2xl md:text-4xl font-bold mb-4 mt-0">
        {{ section.settings.heading }}
      </h2>
      <p class="text-gray-600 font-medium">
        {{ section.settings.subheading }}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 rounded-2xl overflow-hidden shadow-[0_35px_60px_-15px_rgba(0,0,0,0.2)]">

      <!-- US -->
      <div class="bg-[#0F172A] text-white p-8 md:p-12">
        <div class="text-center border-0 border-b border-solid border-white/10 pb-8 mb-8">
          <h4 class="font-black text-2xl uppercase text-accent my-0 text-white">DutyBlade</h4>
          <p class="text-xs uppercase tracking-[0.3em] text-gray-300 mt-2 mb-0">$21 Veteran-Owned</p>
        </div>

        <ul class="space-y-6 pl-0">
          {% for block in section.blocks %}
            {% if block.type == 'us_item' %}
              <li class="flex items-center gap-4 font-bold">
                <div class="bg-green-500/20 p-1 rounded-full size-8 flex items-center justify-center"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-check text-green-500 flex-shrink-0" aria-hidden="true"><path d="M20 6 9 17l-5-5"></path></svg></div>
                {{ block.settings.text }}
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

      <!-- THEM -->
      <div class="bg-white text-primary p-8 md:p-12">
        <div class="text-center border-0 border-b border-solid border-gray-100 pb-8 mb-8">
          <h4 class="font-black text-2xl uppercase my-0">Corporate</h4>
          <p class="text-xs uppercase tracking-[0.3em] text-gray-600 mt-2 mb-0">$35+ Mass-Market</p>
        </div>

        <ul class="space-y-6 pl-0">
          {% for block in section.blocks %}
            {% if block.type == 'them_item' %}
              <li class="flex items-center gap-4 text-gray-500 font-medium">
                <div class="bg-red-500/20 p-1 rounded-full size-8 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-x text-red-500 flex-shrink-0" aria-hidden="true"><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg>
                </div>
                {{ block.settings.text }}
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

    </div>

    {% if section.settings.cta_link != blank %}
      <div class="mt-12 text-center">
        <a href="{{ section.settings.cta_link }}" class="inline-flex items-center gap-2 font-black uppercase tracking-widest text-primary hover:text-accent transition-colors">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {% endif %}

  </div>
</div>

