<div class="bg-[#f5f2ed] py-24 relative overflow-hidden">
  <div class="page-width">

    <div class="text-center mb-8">
      <h2 class="text-2xl md:text-4xl font-bold mb-4 mt-0">
        {{ section.settings.heading }}
      </h2>
      <p class="text-gray-600 font-medium">
        {{ section.settings.subheading }}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 rounded-2xl overflow-hidden shadow-[0_35px_60px_-15px_rgba(0,0,0,0.2)]">

      <!-- US -->
      <div class="bg-[#0F172A] text-white p-8 md:p-12">
        <div class="text-center border-b border-white/10 pb-8 mb-8">
          <h4 class="font-black text-2xl uppercase my-0">DutyBlade</h4>
          <p class="text-xs uppercase tracking-[0.3em] text-gray-300 mt-2 mb-0">$21 Veteran-Owned</p>
        </div>

        <ul class="space-y-6 pl-0">
          {% for block in section.blocks %}
            <li class="flex items-center gap-4 font-bold">
              <div class="bg-green-500/20 p-1 rounded-full size-8 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 6 9 17l-5-5"></path>
                </svg>
              </div>
              {{ block.settings.us_text }}
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- THEM -->
      <div class="bg-white text-primary p-8 md:p-12">
        <div class="text-center border-b border-gray-100 pb-8 mb-8">
          <h4 class="font-black text-2xl uppercase my-0">Corporate</h4>
          <p class="text-xs uppercase tracking-[0.3em] text-gray-600 mt-2 mb-0">$35+ Mass-Market</p>
        </div>

        <ul class="space-y-6 pl-0">
          {% for block in section.blocks %}
            <li class="flex items-center gap-4 text-gray-500 font-medium">
              <div class="bg-red-500/20 p-1 rounded-full size-8 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 6 6 18"></path>
                  <path d="m6 6 12 12"></path>
                </svg>
              </div>
              {{ block.settings.them_text }}
            </li>
          {% endfor %}
        </ul>
      </div>

    </div>

    {% if section.settings.cta_link != blank %}
      <div class="mt-12 text-center">
        <a href="{{ section.settings.cta_link }}" class="font-black uppercase tracking-widest">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {% endif %}

  </div>
</div>

{% schema %}
{
  "name": "Us vs Them Comparison",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Us vs Them"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "The standard you walk past is the standard you accept."
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Upgrade Your Ritual Today"
    }
  ],
  "blocks": [
    {
      "type": "comparison_row",
      "name": "Comparison Row",
      "settings": [
        {
          "type": "text",
          "id": "us_text",
          "label": "Us (DutyBlade)"
        },
        {
          "type": "text",
          "id": "them_text",
          "label": "Them (Corporate)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Us vs Them",
      "blocks": [
        {
          "type": "comparison_row",
          "settings": {
            "us_text": "Premium Safety Razor",
            "them_text": "Plastic Cartridge Razor"
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "us_text": "High-Quality Stainless Blades",
            "them_text": "Expensive Disposable Refills"
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "us_text": "Traditional Shaving Soap",
            "them_text": "Chemical-Filled Gel"
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "us_text": "Veteran-Owned & Operated",
            "them_text": "Corporate Mass Production"
          }
        },
        {
          "type": "comparison_row",
          "settings": {
            "us_text": "Lifetime Warranty",
            "them_text": "Planned Obsolescence"
          }
        }
      ]
    }
  ]
}
{% endschema %}
