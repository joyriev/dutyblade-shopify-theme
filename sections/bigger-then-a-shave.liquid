<div class="bg-white py-20 border-b border-gray-100">
  <div class="page-width">

    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl font-serif font-extrabold text-primary uppercase tracking-tight mb-4">
        {{ section.settings.heading }}
      </h2>
      <div class="w-24 h-1 bg-accent mx-auto"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      {% for block in section.blocks %}
        <div class="flex flex-col items-center text-center group" {{ block.shopify_attributes }}>

          <div class="p-6 rounded-full bg-gray-50 mb-6 group-hover:bg-primary transition-colors duration-300 flex items-center justify-center">
            {% if block.settings.icon_image != blank %}
              <img
                src="{{ block.settings.icon_image | image_url: width: 96 }}"
                alt="{{ block.settings.title | escape }}"
                width="48"
                height="48"
                class="transition duration-300 group-hover:invert"
                loading="lazy">
            {% endif %}
          </div>

          <h3 class="font-bold text-xl mb-3">
            {{ block.settings.title }}
          </h3>

          <p class="text-gray-500 text-sm max-w-[250px] leading-relaxed">
            {{ block.settings.description }}
          </p>

        </div>
      {% endfor %}
    </div>

  </div>
</div>

{% schema %}
  {
    "name": "Bigger Than A Shave",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading",
        "default": "Bigger Than A Shave"
      }
    ],
    "blocks": [
      {
        "type": "feature",
        "name": "Feature Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon_image",
            "label": "Icon Image"
          }, {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, {
            "type": "textarea",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ],
    "max_blocks": 3,
    "presets": [
      {
        "name": "Bigger Than A Shave",
        "blocks": [
          {
            "type": "feature"
          }, {
            "type": "feature"
          }, {
            "type": "feature"
          }
        ]
      }
    ]
  }
{% endschema %}